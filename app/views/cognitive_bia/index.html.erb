<p id="notice"><%= notice %></p>

<h1 class="h3">Cognitive Bia</h1>

<table class="table-hover table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @cognitive_bia.each do |cognitive_bium| %>
      <tr>
        <td><%= link_to "#{cognitive_bium.name}", cognitive_bium %></td>
        <td><%= link_to 'Edit', edit_cognitive_bium_path(cognitive_bium) %></td>
        <td><%= link_to 'Delete', cognitive_bium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New', new_cognitive_bium_path, class:"btn-primary btn" %>

<h2 class="h3">Import Problems</h2>
<%= form_tag import_cognitive_bia_path, multipart: true do %>
  <div class="btn btn-primary btn-file">
    Choose File
    <%= file_field_tag :file %>
  </div>
  <input type="text" id="chosen-file" class="form-control" readonly>
  <br><br>
  <%= submit_tag "Import", class:"btn-primary btn" %>
<% end %>
