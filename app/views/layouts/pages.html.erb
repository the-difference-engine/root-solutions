<!DOCTYPE html>
<html>
  <head>
    <title>RootSolutions</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Noto+Sans" rel="stylesheet">
  </head>

  <body>
  
    <nav class="navbar navbar-default navbar-custom navbar-fixed-top">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Root Solutions</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">About <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="#">Team</a></li>
                <li><a href="#">Partners</a></li>
                <li><a href="#">Mission</a></li>
                <li><a href="#">Careers</a></li>

              </ul>
            </li>
              
            <li><a href="#">Work With Us</a></li>

            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Learn<span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><a href="#">Why Behavior</a></li>
                  <li><a href="#">Our Process</a></li>
                  <li><a href="#">Behavior Design</a></li>
                </ul>
            </li>
            <li><a href="#">Donate</a></li>
          </ul>
        
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
    <%= yield %>

    <footer id="main-footer">
      <div id="sub-footer">
        <div class="row">
          <div class="col-md-2"></div>

          <div class="footer-content-container">
            <div class="col-md-4 footer-left-col">
              <div class="title-container">  
                <h1 class="footer-form-title">Sign up for our newsletter</h1>
              </div>

              <input type="email" class="black-text footer-email-bar" name="email">

              <div class="footer-button-container">
                <div class="footer-button-content-container">
                  <button class="footer-form-submit">Subscribe</button>
                </div>
              </div>
            </div>

            
            <div class="col-md-4 footer-right-col">
              <p class="company-info">405 14th St, Oakland, CA 94612</p> 
              <p class="company-info">info@therootsolutions.org | 415.360.6309</p>

              <div class="social-media-images-container">
                <i class="fa fa-rss" aria-hidden="true"></i>
                <i class="fa fa-twitter" aria-hidden="true"></i>
                <i class="fa fa-facebook" aria-hidden="true"></i>
              </div>
            </div>
          </div>  
          <div class="col-md-2"></div>
        
          
      </div>
    </footer> 
  </body>
</html>
