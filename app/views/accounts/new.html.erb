<!-- Header Area -->
<header class="header-area inner-page">
<!-- Header Top Area --><!-- 
<section class="header-top"> -->
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-xs-12">
        <div class="header-elements pull-right">
        </div>
      </div>
    </div>
  </section>
</header>
<div class="row">
  <div class="col-md-6">
    <%= form_tag "/admins/users", method: :post do %>
    <form class="form-horizontal">
      <div class="row">
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10 inputs-group">
            <%=label_tag :email %>
            <%=text_field_tag :email,"", class:"form-control" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10 inputs-group">
            <%=label_tag :password %>
            <%=password_field_tag :password,"", class:"form-control" %>
          </div>
        </div>
      </div>
      <div class="button" align="center">
        <%= button_tag "<span> Create New User</span>".html_safe, class: "btn primary-btn"%>
      </div>
      <%end%>
    </form>
  </div>
</div>