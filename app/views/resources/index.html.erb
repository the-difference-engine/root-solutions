<div ng-app="adminpanel-app" ng-controller="resourcesCtrl">
<h1>All Resources</h1>

<table>
  <tr>
    <th>World region</th>
    <th>Title</th>
    <th>Author</th>
    <th>News source</th>
    <th>Date</th>
    <th>Summary</th>
    <th>Url</th>
    <th>Notes</th>
    <td colspan="2"></td>
  </tr>
  <% @resources.each do | resource | %>
  <tr>
    <td><%= resource.world_region %></td>
    <td><a href="/resources/<%= resource.id %>"><%= resource.title %></a></td>
    <td><%= resource.author %></td>
    <td><%= resource.news_source %></td>
    <td><%= resource.date %></td>
    <td><%= resource.summary %></td>
    <td><%= resource.url %></td>
    <td><%= resource.notes %></td>
    <td><a href="/resources/<%= resource.id %>/edit">Edit</a></td>
    <td>Delete</td>
  </tr>
  <% end %>
</table>

<br />

<%= link_to "New Resource", new_resource_path %>

<button type="button" class="btn btn-default" aria-label="Left Align">
  <span class="glyphicon glyphicon-align-left" aria-hidden="true"></span>
</button>

<button type="button" class="btn btn-default btn-lg">
  <span class="glyphicon glyphicon-star" aria-hidden="true"></span> Star
</button>

</div>
