
 
<p id="notice"><%= notice %></p>

<h1 class="h3">Resources</h1>

<table class="table-hover table">
  <thead>
    <tr>
      <th>Title</th>
      <th>World Region ID</th>
      <th>Author</th>
      <th>News Source ID</th>
      <th>Date</th>
      <th>Content</th>
      <th>URL</th>
      <th>Notes</th>
    </tr>
  </thead>

  <tbody>
    <% @resources.each do |resource| %>
      <tr>
        <td><%= link_to "#{resource.title}", resource %></td>
        <td><%= resource.world_regions.first.name if resource.world_regions.any? %></td>
        <td><%= resource.author %></td>
        <td><%= resource.news_source_id %></td>
        <td><%= resource.date %></td>
        <% if resource.abstract %>
          <td><%= resource.abstract %></td>
        <% else %>
          <td><%= resource.description %></td>
        <% end %>
        <td><%= resource.url %></td>
        <td><%= link_to 'Edit', edit_resource_path(resource) %></td>
        <td><%= link_to 'Destroy', resource, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user %>
  <%= link_to 'Add New', new_resource_path, class:"btn-primary btn" %>
<% end %>