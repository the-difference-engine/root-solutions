    </div>
  </div>
  <div id="career-row" class="row">
    <div class='col-md-2'></div>
    <div class="col-md-8">
      <div class="careers-image" id="careers-image-project-assistant-volunteer"></div>
      <%= link_to "Projects Assistant Volunteer", "http://media.wix.com/ugd/5440fd_613c95fb84ea464696e60d93443b0763.pdf", class: "careers-links" %>
    </div>
  </div>
</div>

<script>
  $(function(){
    $('#sidebar-nav').affix({
      offset: {
        top: function() {
          return $('#header-row').offset().top + $('#header-row').outerHeight(true) - 170;
        }
      }
    })
    $('#sidebar-nav a').click(function(){
      $('#sidebar-nav').affix('checkPosition');
    })
  });
</script>