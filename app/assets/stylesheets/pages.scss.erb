  float: right;
}
.navbar-custom .navbar-inner .nav li a {
  background: none;
  -webkit-box-shadow: none;
  -moz-box-shadow: none;
  box-shadow: none;
  color: #777;
  font-size: 13px;
  padding-top: 15px;
  padding-bottom: 15px;
  font-weight: 600;
}


.navbar-custom .navbar-inner .nav li a:hover {
  background: none;
  -webkit-box-shadow: none;
  -moz-box-shadow: none;
  box-shadow: none;
  color: #bf3604;
}   


